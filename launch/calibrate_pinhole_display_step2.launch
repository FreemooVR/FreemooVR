<launch>
  <!-- Spawn the display server. -->
  <node name="ds" pkg="flyvr" type="display_server" args="--mode=vr_display">
    <rosparam command="load" file="$(find strawlab_tethered_experiments)/data/display_server_left.yaml" />
  </node>

  <node type="drive_extrinsic_display_calibration" pkg="flyvr" name="drive"
  args="--intrinsic_fname=$(find flyvr)/data/sample/pinhole-intrinsics.yaml --geom_fname=$(find flyvr)/data/sample/geom.json --display_server=/ds --viewport center" />

  <node type="draw_rviz_frustum" pkg="flyvr" name="draw_rviz_frustum" />

  <node type="rviz" pkg="rviz" name="rviz" args="$(find flyvr)/data/pinhole_cal.vcg" />

  <node type="spacenav_pose" pkg="flyvr" name="spacenav_pose" />
  <node type="simple_tf_filter" pkg="flyvr" name="tfilt" args="--child_frame=/pinhole_cal --topic_name=/pinhole_cal/tf"/>

  <node type="joy_node" pkg="joy" name="joy_node" />

</launch>
