#!/usr/bin/env python
import numpy as np
import argparse

import roslib; roslib.load_manifest('flyvr')
import rospy
import display_client # from flyvr_projectors package
import tf.transformations

def drive_extrinsic_display_calibration():
    while not rospy.is_shutdown():
        rospy.sleep(0.1)

if __name__ == '__main__':
    rospy.init_node('drive_extrinsic_display_calibration')

    parser = argparse.ArgumentParser()

    argv = rospy.myargv()
    args = parser.parse_args(argv[1:])

    display_client.DisplayServerProxy.set_stimulus_mode(
        'StimulusPinholeDisplay')
    print 'remote attempted to request new mode'

    drive_extrinsic_display_calibration()
